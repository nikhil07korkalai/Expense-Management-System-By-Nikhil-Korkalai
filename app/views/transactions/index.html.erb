<p id="notice"><%= notice %></p>
<div class="container">
  <div id="user_nav">
    <% if current_user %>
      <h1>Income List Of <i><%= current_user.name.capitalize %></i></h1>
    <%end%>
    
<table class="table table-hover table-bordered">
  <thead>
    <tr class="success">
      <th>Income Category</th>
      <th>Expense Category</th>
      <th>Amount</th>
      <th>Date</th>
      </tr>
  </thead>

  <tbody>
  <% if @transactions.present? %>
   <% @transactions.each do |transaction|%>
      <tr class="warning">
        <% if transaction.transaction_through_type == 'Income' %>
         <td><%= transaction.get_income %></td>
        <% else %>
         <td>**********</td>
        <% end %> 

        <% if transaction.transaction_through_type == 'Expense' %>
         <td><%= transaction.get_expense %></td>
         <% else %>
           <td>**********</td>
        <% end %>  

        <td><%= transaction.get_amount.amount %></td>
        <td><%= transaction.date %></td>
      </tr>
   <% end %>
  <% end %>
  </tbody>
</table>
<td><%= link_to 'Income Category', income_categories_path , class: 'btn btn-warning', style: 'color:white' %></td>
  <td><%= link_to 'Expense', expenses_path , class: 'btn btn-warning', style: 'color:white' %></td>
  <td><%= link_to 'Expense Category', new_income_category_path , class: 'btn btn-warning', style: 'color:white' %></td>
  <td><%= link_to 'Income', incomes_path , class: 'btn btn-warning', style: 'color:white' %></td>
</div>

       